// Menu
// --------------------------------------------------
.menu {
  margin: 0;
  padding: 1em 0;
  text-align: center;
}

.menu-item {
  display: inline-block;
  list-style: none;
  margin: 0 10px;

  +mobile() {
    display: block;
    margin-top: 10px;

    &.menu-item-search {
      display: none;
    }
  }

  a {
    border-bottom: 0;
    display: block;
    font-size: $font-size-smaller;
    transition: border-color $transition-ease, transform .15s ease;
    will-change: transform;

    /* hover 上浮效果，不改变背景 */
    &:hover { 
      background: transparent; 
      transform: translateY(-2px);
    }
    /* 选中态：保持原背景，同时也有上浮效果 */
    &.menu-item-active { 
      background: transparent;
      transform: translateY(-2px);
    }
  }

  i[class^='fa'] {
    margin-right: 8px;
  }

  .badge {
    badge();
  }
}

if (hexo-config('motion.transition.menu_item')) {
  .use-motion .menu-item {
    visibility: hidden;
  }
}
