// 翻译按钮样式 - 与其他菜单按钮保持一致
.menu-item-translate {
  .translate-btn {
    // 继承通用菜单按钮样式
    border-radius: 2px;
    padding: 0 10px;
    transition-property: background;
    
    // 移除自定义样式，使用通用样式
    &:hover {
      // 使用与其他菜单按钮相同的hover效果
      background: var(--menu-item-bg-color);
    }

    i {
      font-size: 16px;
      line-height: 20px;
    }
  }
} 