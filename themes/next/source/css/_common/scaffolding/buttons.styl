.btn {
  background: $btn-default-bg;
  color: $btn-default-color;
  display: inline-block;
  font-size: $btn-default-font-size;
  line-height: 2;
  text-decoration: none;
  transition-property: background-color;
  the-transition();
  text-align: left;

  + .btn {
    margin: 0 0 8px 8px;
  }

  .fa-fw {
    text-align: left;
    width: (18em / 14);
  }
}
