@media screen and (max-width: 767px) {
  header.header {
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    padding: 0 15px !important;
  }
  
  .site-brand-container {
    flex: 0 0 auto !important;
    padding: 0 !important;
    max-width: calc(100% - 200px) !important;
    overflow: hidden !important;
  }
  
  .site-meta {
    text-align: left !important;
  }
  
  .site-title {
    font-size: 18px !important;
    white-space: nowrap !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
  }
  
  .site-nav {
    flex: 0 0 auto !important;
    position: relative !important;
    z-index: 1001 !important;
  }
  
  .site-nav .menu {
    display: flex !important;
    justify-content: flex-end !important;
    align-items: center !important;
    flex-wrap: nowrap !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  .site-nav .menu .menu-item {
    margin: 0 3px !important;
    flex-shrink: 0 !important;
  }
  
  .site-nav .menu .menu-item a {
    transform: none !important;
    padding: 6px 10px !important;
    font-size: 13px !important;
    white-space: nowrap !important;
  }
  
  .site-nav .menu .menu-item a:hover,
  .site-nav .menu .menu-item-active a {
    transform: none !important;
  }
  
  .site-nav .menu .menu-item-search {
    display: none !important;
  }
  
  .site-nav .menu .menu-item a,
  .site-nav .menu .menu-item i {
    position: relative !important;
    z-index: 1002 !important;
  }
}

@media screen and (min-width: 992px) {
  .site-brand-container {
    padding-left: 30px !important;
  }
}

@media screen and (min-width: 992px) {
  .site-nav .menu {
    padding-right: 20px !important;
  }
}

@media screen and (max-width: 768px) {
  .persistent-music-player {
    bottom: 15px !important;
    left: 20px !important;
    max-width: calc(100vw - 80px) !important;
  }
  
  .music-iframe-container iframe {
    width: 280px !important;
    height: 380px !important;
  }
  
  .site-nav .menu .menu-item-search {
    display: none !important;
  }
}

@media screen and (max-width: 480px) {
  .persistent-music-player {
    bottom: 10px !important;
    left: 15px !important;
    max-width: calc(100vw - 70px) !important;
  }
  
  .music-iframe-container iframe {
    width: 250px !important;
    height: 350px !important;
  }
}

@media screen and (max-width: 360px) {
  .persistent-music-player {
    left: 10px !important;
    max-width: calc(100vw - 65px) !important;
  }
  
  .music-iframe-container iframe {
    width: 220px !important;
    height: 320px !important;
  }
}

@media screen and (max-width: 1024px) {
  .persistent-music-player {
    left: 70px !important;
  }
}

@media screen and (max-width: 767px) {
  .post.posts-expand .post-body img:hover,
  .page.posts-expand .post-body img:hover {
    transform: none !important;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1) !important;
  }
  
  .post.posts-expand .post-body figure figcaption,
  .page.posts-expand .post-body figure figcaption {
    font-size: 13px !important;
    max-width: 95% !important;
  }
  
  .site-nav .menu .menu-item-search {
    display: none !important;
  }
}

.search-popup {
  height: 200% !important;
  margin: 2.5% auto !important;
  max-width: 800px !important;
  border-radius: 8px !important;
}

mobile() {
  .search-popup {
    height: 100% !important;
    margin: 0 !important;
    border-radius: 0 !important;
  }
}

.main {
  padding-top: 90px !important;
}

mobile() {
  .main {
    padding-top: 80px !important;
  }
} 