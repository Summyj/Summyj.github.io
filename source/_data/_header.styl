body.theme-dark .site-nav .menu .menu-item a {
  color: #f5f5f5 !important;
}

html.theme-dark .site-nav .menu .menu-item i,
body.theme-dark .site-nav .menu .menu-item i {
  color: #f5f5f5 !important;
}

/* Hide header when sidebar is active */
body.sidebar-active header.header {
  transform: translateY(-100%) !important;
}

/* Move specific menu icons to right side */
.site-nav .menu {
  display: flex !important;
  justify-content: flex-end !important; /* Align to right */
  align-items: center !important; /* 垂直居中菜单项 */
  height: 100% !important; /* 占满header高度 */
}

.site-nav .menu .menu-item {
  margin-left: 10px !important; /* 减少菜单项间距 */
  display: flex !important;
  align-items: center !important; /* 垂直居中菜单项内容 */
}

/* 品牌区域样式调整 */
.site-brand-container {
  display: flex !important;
  align-items: center !important; /* 垂直居中品牌内容 */
  height: 100% !important; /* 占满header高度 */
}

/* 菜单项样式统一（覆盖之前的定义） */
.site-nav .menu .menu-item a {
  font-size: 14px !important; /* Consistent icon size */
  padding: 8px 12px !important; /* 减少padding以适应更小header */
  transition: all 0.2s ease !important;
  border-radius: 20px !important;
  /* 移除固定的颜色设置，让主题特定的样式生效 */
}

.site-nav .menu .menu-item a:hover {
  background: rgba(0,0,0,0.05) !important;
}

/* 菜单图标颜色调整 - 移除固定颜色，让主题特定样式生效 */

/* Specific for listed icons - ensure they are targeted if needed */
.site-nav .menu .menu-item-home,
.site-nav .menu .menu-item-about,
.site-nav .menu .menu-item-search,
.site-nav .menu .menu-item-translate,
.site-nav .menu .menu-item-darkmode
  opacity: 1; /* 占位符, 可根据需要调整或删除 */

/* Remove gray shadow on hover for all menu icons */
.site-nav .menu .menu-item:hover,
.site-nav .menu .menu-item a:hover {
  box-shadow: none !important;
  background: transparent !important;
  text-shadow: none !important;
}

/* 移动端隐藏搜索图标 */
@media screen and (max-width: 767px) {
  .site-nav .menu .menu-item-search {
    display: none !important;
  }
} 