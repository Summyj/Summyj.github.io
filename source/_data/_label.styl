}

html.theme-dark .post-body .label.success,
body.theme-dark .post-body .label.success {
  color: #4ade80 !important;
}

html.theme-dark .post-body .label.info,
body.theme-dark .post-body .label.info {
  color: #60a5fa !important;
}

html.theme-dark .post-body .label.warning,
